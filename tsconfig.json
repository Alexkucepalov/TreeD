{
	"compilerOptions": {
		"target": "ES5",
		"module": "ESNext",
		"moduleResolution": "node",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"jsx": "react-jsx",
		"isolatedModules": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"allowJs": true,
		"plugins": [{ "name": "typescript-plugin-css-modules" }],
		"baseUrl": ".",
		"paths": {
			"@app/*": ["./src/app/*"],
			"@features/*": ["./src/features/*"],
			"@shared/*": ["./src/shared/*"],
			"@store/*": ["./src/store/*"],
			"@assets/*": ["./src/assets/*"],
			"@styles/*": ["./src/styles/*"],
			"@pages/*": ["./src/pages/*"],
			"@components/*": ["./src/components/*"],
			"@services/*": ["./src/services/*"],
			"@utils/*": ["./src/utils/*"]
		}
	},
	"outDir": "./dist/",
	"include": ["src/**/*"],
	"exclude": ["**/*.stories.*", "**/*.test.*", "node_modules", "dist"]
}
